@using BAK_web.Models
@model Crossword
@{
    ViewBag.Title = "Crossword";
}

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/wwwroot/css/style.css" type="text/css" />
    <script src="~/wwwroot/js/JavaScript.js"></script>
    <title>Crossword</title>
</head>


<body>
    <div class="body-container">
        <button onclick="settingVariables()" class="dontPrint">Generovat</button>


        <div id="crosswordResult"></div>
        <div id="options">
            <span id="options-text">
                Zvolte typ křížovky:
            </span>

            <div class="buttons">
                <button onclick="chooseOption(1)">Britská</button>
                <button onclick="chooseOption(2)">Švédská</button>
            </div>
        </div>
    </div>
</body>
